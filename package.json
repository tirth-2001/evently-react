{
  "name": "evently-react",
  "description": "A Hook-Based Framework for Event-Driven React Apps",
  "private": false,
  "version": "0.0.1",
  "main": "./build/esm/index.js",
  "module": "./build/esm/index.js",
  "types": "./build/esm/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "ts-build": "tsc",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "build:esm": "rm -rf build && tsc",
    "prettier.check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "prettier.write": "prettier --write \"src/**/*.{ts,tsx}\"",
    "watch": "chokidar 'src/**/*' -c 'yarn ts-build'"
  },
  "files": [
    "build",
    "README.md"
  ],
  "keywords": [
    "react-event",
    "useEvent",
    "event-management",
    "event",
    "event-bus",
    "pub-sub",
    "hooks",
    "middleware",
    "state-management",
    "react-hooks",
    "event-driven-architecture",
    "typescript",
    "in-memory-cache",
    "scalable",
    "react"
  ],
  "license": "MIT",
  "author": "Tirth Patel",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tirth-2001/evently-react.git"
  },
  "bugs": {
    "url": "https://github.com/tirth-2001/evently-react/issues"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "prettier": "^3.1.1",
    "typescript": "^5.7.2",
    "vite": "^5.0.8"
  }
}
